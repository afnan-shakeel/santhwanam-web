{
  "root": true,
  "ignorePatterns": [
    "dist/",
    "coverage/",
    "node_modules/",
    "out-tsc/"
  ],
  "env": {
    "browser": true,
    "es2023": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": [
      "tsconfig.app.json",
      "tsconfig.spec.json"
    ],
    "tsconfigRootDir": "."
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/consistent-type-imports": [
      "warn",
      {
        "prefer": "type-imports"
      }
    ],
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "warn",
    "import/order": [
      "warn",
      {
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "error",
          "warn",
          "info"
        ]
      }
    ]
  }
}

